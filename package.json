{
    "name": "typescript-traits",
    "version": "1.0.0",
    "description": "PHP Traits for TypeScript",
    "main": "./dist/applyTraits.umd.js",
    "module": "./dist/applyTraits.es.js",
    "exports": {
        ".": {
            "types": "./dist/applyTraits.d.ts",
            "import": "./dist/applyTraits.es.js",
            "require": "./dist/applyTraits.umd.js"
        }
    },
    "scripts": {
        "build": "tsc && vite build",
        "dev": "node --watch -r ts-node/register src/index.ts",
        "start": "node dist/index.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watchAll"
    },
    "keywords": [
        "TypeScript",
        "PHP",
        "Traits"
    ],
    "author": "Astro_Corp",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "jest": "^29.7.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "vite": "^6.2.6",
        "vite-plugin-dts": "^4.5.3"
    },
    "files": [
        "dist"
    ]
}